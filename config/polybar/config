[settings]
throttle-output = 0
throttle-output-for = 10
throttle-input-for = 30

[colors]
blackDark = ${xrdb:polybar.color0:#000000}
blackLight = ${xrdb:polybar.color8:#000000}
redDark = ${xrdb:polybar.color1:#000000}
redLight = ${xrdb:polybar.color9:#000000}
greenDark = ${xrdb:polybar.color2:#000000}
greenLight = ${xrdb:polybar.color10:#000000}
yellowDark = ${xrdb:polybar.color3:#000000}
yellowLight = ${xrdb:polybar.color11:#000000}
blueDark = ${xrdb:polybar.color4:#000000}
blueLight = ${xrdb:polybar.color12:#000000}
magentaDark = ${xrdb:polybar.color5:#000000}
magentaLight = ${xrdb:polybar.color13:#000000}
cyanDark = ${xrdb:polybar.color6:#000000}
cyanLight = ${xrdb:polybar.color14:#000000}
whiteDark = ${xrdb:polybar.color7:#000000}
whiteLight = ${xrdb:polybar.color15:#000000}

background = ${xrdb:polybar.background:#000000}
background-alt = ${self.blackLight}
foreground = ${xrdb:polybar.foreground:#000000}
foreground-alt = ${self.whiteLight}
icon = ${self.background}
alert = ${self.redDark}
accent = ${self.greenLight}

[bar/top]
width = 100%
module-margin-left = 4
padding = 1

foreground = ${colors.foreground}
background = ${colors.background}

border-bottom-size = 2
border-bottom-color = ${colors.accent}

line-size = 2

modules-left = bspwm
modules-center = 
modules-right = updates keyboard temperature wifi brightness volume battery date mute-notifications

font-0 = "Sans:size=11;1"
font-1 = "FontAwesome:size=12:style=solid;3"
font-2 = "FontAwesomeBrands:size=12:style=regular;3"

locale = en_US.UTF-8

tray-position = right
tray-padding = 5

cursor-click = pointer
cursor-scroll = ns-resize

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 78

poll-interval = 5

label-full = %percentage%%

format-full-prefix = 
format-full-prefix-padding-right = 1

format-discharging = <label-discharging>

label-discharging = %percentage%%

format-discharging-prefix = 
format-discharging-prefix-padding-right = 1

format-charging = <label-charging>

label-charging = %percentage%%

format-charging-prefix = 
format-charging-prefix-padding-right = 1

[module/date]
type = internal/date

interval = 5.0

time = %H:%M
time-alt = %b %d, %H:%M

format = <label>

format-prefix = 
format-prefix-padding-right = 1

label = %time%

[module/wifi]
type = internal/network
interface = wlp2s0

interval = 3

format-connected = <label-connected>

label-connected = 

format-disconnected = <label-disconnected>

label-disconnected =

[module/bspwm]
type = internal/bspwm

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 0;10
ws-icon-default = 

padding = 2

label-padding-right = ${self.padding}

label-focused = %icon%
label-focused-foreground = ${colors.accent}
label-focused-padding = ${self.padding}
label-focused-overline = ${colors.accent}

label-urgent = %icon%
label-urgent-foreground = ${colors.alert}
label-urgent-padding = ${self.padding}
label-urgent-overline = ${colors.alert}

label-empty =
label-empty-padding = ${self.padding}

label-occupied = %icon%
label-occupied-padding = ${self.padding}

[module/volume]
type = internal/pulseaudio

use-ui-max = true
interval = 5

label-volume = %percentage%%

format-volume = <label-volume>

format-volume-prefix = 
format-volume-prefix-padding-right = 1

label-muted = %percentage%%

format-muted = <label-muted>

format-muted-prefix = 
format-muted-prefix-padding-right = 1

[module/keyboard]
type = internal/xkeyboard

format = <label-layout>

label-layout = %layout%
label-layout-foreground = ${colors.foreground}

format-prefix = 
format-prefix-padding-right = 1

[module/temperature]
type = internal/temperature
interval = 0.5
hwmon-path = /sys/class/hwmon/hwmon1/temp1_input
warn-temperature = 70
units = false

label = %temperature-c%

format = <label>
format-prefix = 
format-prefix-padding-right = 1

label-warn = %temperature-c%
label-warn-overline = ${colors.alert}

format-warn = <label-warn>
format-warn-prefix = 
format-warn-prefix-padding-right = 1
format-warn-prefix-overline = ${colors.alert}

[module/mute-notifications]
type = custom/script

exec = "$HOME/.config/polybar/mute-notifications.sh"

tail = true

click-left = "kill -USR1 %pid%"

[module/updates]
type = custom/script

exec = "$HOME/.config/polybar/checkupdates.sh"

interval = 60

format-prefix = 
format-prefix-padding-right = 1
format-prefix-overline = ${colors.alert}

click-left = "kitty $HOME/.config/polybar/update.sh &"

[module/brightness]
type = custom/script

exec = "$HOME/.config/polybar/brightness.sh"

scroll-up = "$HOME/.config/polybar/brightness.sh up"
scroll-down = "$HOME/.config/polybar/brightness.sh down"

interval = 1

format-prefix = 
format-prefix-padding-right = 1

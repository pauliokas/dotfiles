[user]
	name = Paulius Kigas
	useConfigOnly = true

[push]
	default = simple

[alias]
	f = fetch --tags --prune

	branch-name = "!git rev-parse --abbrev-ref HEAD"

	diffc = diff --cached

	publish = "!git push --set-upstream origin `git branch-name`"

	co = checkout
	st = status --short
	br = branch
	rmb = "!f() { git branch -D \"$1\" ; git push origin --delete \"$1\" ; } ; f"

	ls = log --pretty=format:"%C(yellow)%h%C(red)%d\\ %C(reset)%s%C(blue)\\ [%an]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%C(red)%d\\ %C(reset)%s%C(blue)\\ [%an]" --decorate --numstat
	ld = log --pretty=format:"%C(yellow)%h\\ %ad%C(red)%d\\ %C(reset)%s%C(blue)\\ [%an]" --decorate --date=relative
	le = log --oneline --decorate

	filelog = log -u

	sshow = "!f() { git stash show stash^{/$@} --patch ; } ; f"
	sapply = "!f() { git stash apply stash^{/$@} ; } ; f"
	ssave = "!f() { git stash save \"$@\" ; } ; f"

	refresh = "!f() { git fetch && git rebase origin/master ; } ; f"
	sw = switch

[core]
	editor = vi
	excludesfile = ~/.gitignore_global

[rebase]
	autosquash = true

[merge]
	conflictStyle = zdiff3

[diff]
	algorithm = histogram

[sequence]
	editor = interactive-rebase-tool

[rerere]
	enabled = true

[pull]
	ff = only

[pager]
	log = /opt/homebrew/opt/git/share/git-core/contrib/diff-highlight/diff-highlight | less
	show = /opt/homebrew/opt/git/share/git-core/contrib/diff-highlight/diff-highlight | less
	diff = /opt/homebrew/opt/git/share/git-core/contrib/diff-highlight/diff-highlight | less

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	commit = green
	meta = yellow
	frag = cyan
	old = red
	new = green
	whitespace = red reverse

set $mod Mod4

set $key_up     k
set $key_down   j
set $key_left   h
set $key_right  l

set_from_resource $cBlackDark     i3wm.color0   #000000
set_from_resource $cBlackLight    i3wm.color8   #000000
set_from_resource $cRedDark       i3wm.color1   #000000
set_from_resource $cRedLight      i3wm.color9   #000000
set_from_resource $cGreenDark     i3wm.color2   #000000
set_from_resource $cGreenLight    i3wm.color10  #000000
set_from_resource $cYellowDark    i3wm.color3   #000000
set_from_resource $cYellowLight   i3wm.color11  #000000
set_from_resource $cBlueDark      i3wm.color4   #000000
set_from_resource $cBlueLight     i3wm.color12  #000000
set_from_resource $cMagentaDark   i3wm.color5   #000000
set_from_resource $cMagentaLight  i3wm.color13  #000000
set_from_resource $cCyanDark      i3wm.color6   #000000
set_from_resource $cCyanLight     i3wm.color14  #000000
set_from_resource $cWhiteDark     i3wm.color7   #000000
set_from_resource $cWhiteLight    i3wm.color15  #000000
set $transparent #00000099

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Monospace, pango:FontAwesome 10
#font pango:Monospace 14
#font pango:FontAwesome 8
#font pango:FontAwesome 12
#font pango:FontAwesomeBrands 12

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+$key_left  focus left
bindsym $mod+$key_down  focus down
bindsym $mod+$key_up    focus up
bindsym $mod+$key_right focus right

# move focused window
bindsym $mod+Shift+$key_left  move left
bindsym $mod+Shift+$key_down  move down
bindsym $mod+Shift+$key_up    move up
bindsym $mod+Shift+$key_right move right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+Shift+a focus child

bindsym XF86AudioMute         exec --no-startup-id xf86 volume mute
bindsym XF86AudioLowerVolume  exec --no-startup-id xf86 volume down
bindsym XF86AudioRaiseVolume  exec --no-startup-id xf86 volume up
bindsym XF86AudioMicMute      exec --no-startup-id xf86 input-volume mute
bindsym XF86MonBrightnessDown exec --no-startup-id xf86 brightness down
bindsym XF86MonBrightnessUp   exec --no-startup-id xf86 brightness up

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1:"
set $ws2 "2:"
set $ws3 "3:"
set $ws4 "4:"
set $ws5 "5:"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1;  workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2;  workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3;  workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4;  workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5;  workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6;  workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7;  workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8;  workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9;  workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10; workspace $ws10

bindsym $mod+Tab workspace back_and_forth

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

bindsym $mod+r mode "resize"
mode "resize" {
  bindsym $key_left   resize shrink width 10 px or 10 ppt
  bindsym $key_down   resize grow height 10 px or 10 ppt
  bindsym $key_up     resize shrink height 10 px or 10 ppt
  bindsym $key_right  resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape or $mod+r
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

set $mode_power "[L]ock, [S]uspend, [P]owerOff, [R]eboot, [E]xit"
bindsym $mod+Escape mode $mode_power
mode $mode_power {
  bindsym s mode "default"; exec --no-startup-id systemctl suspend
  bindsym p mode "default"; exec --no-startup-id systemctl poweroff
  bindsym r mode "default"; exec --no-startup-id systemctl reboot
  bindsym e mode "default"; exec i3-msg exit
  bindsym l mode "default"; exec --no-startup-id gllock
  
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  i3bar_command i3bar -t
  status_command i3status
  position top

  strip_workspace_numbers yes

  colors {
    statusline $cWhiteLight
    background $transparent
    separator $cWhiteLight77

    #                   BORDER        BACKGROUND    TEXT
    focused_workspace   $transparent  $transparent  $cWhiteLight
    inactive_workspace  $transparent  $transparent  $cWhiteLight77
    urgent_workspace    $cRedDark     $cRedDark     $cWhiteLight
    binding_mode        $cRedDark     $cRedDark     $cWhiteLight
  }
}

workspace_auto_back_and_forth yes

assign [class="Firefox"] $ws1
for_window [class="Firefox"] floating enable
assign [class="code-oss"] $ws2
assign [class="^Signal$"] $ws4
for_window [class="^Signal$"] floating enable
assign [class="Slack"] $ws4
for_window [class="Slack"] floating enable
for_window [class="Spotify"] floating enable, move window to workspace $ws5

gaps inner 2
smart_gaps on
smart_borders on

exec_always --no-startup-id feh --bg-fill --no-fehbg ~/Pictures/Wallpapers/arch-mesh.png
exec --no-startup-id compton --daemon
exec --no-startup-id dunst &
